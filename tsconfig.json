{
  "compilerOptions": {
    "target": "es2015",
    "module": "ESNext",
    "lib": ["es2015", "dom"],
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["react", "react-dom"],
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.stories.tsx"
  ]
}
